<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.DangKyActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbDangKy"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title=" ">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tbDangKy"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textColor="#ff00"
            android:gravity="center"
            android:padding="5sp"
            android:textSize="25sp"
            android:layout_marginTop="10sp"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/edtHoTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Họ tên"
            android:drawableLeft="@drawable/ic_personal"
            android:drawablePadding="5sp"
            android:textSize="20sp"
            android:ems="15"
            android:layout_marginBottom="10sp"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/edtSoDienThoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:drawableLeft="@drawable/ic_phone_number"
            android:drawablePadding="5sp"
            android:textSize="20sp"
            android:ems="15"
            android:layout_marginBottom="10sp"
            android:inputType="phone"
            />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="5sp"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:ems="15" />


        <EditText
            android:id="@+id/edtDiaChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="5sp"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:ems="15" />
        <EditText
            android:id="@+id/edtMatKhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="5sp"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:ems="15" />

        <Button
            android:layout_width="200sp"
            android:layout_height="60sp"
            android:id="@+id/btnDangKy"
            android:text="Đăng ký"
            android:textStyle="bold"
            android:textSize="20sp"
            android:backgroundTint="#ff00"
            android:layout_marginTop="10sp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:layout_marginBottom="10sp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đã có tài khoản?"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDangNhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="Đăng nhập"
                android:textColor="#ff00"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="40sp"
            android:src="@drawable/login" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>