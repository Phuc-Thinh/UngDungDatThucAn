<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ThemSP">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/tbThem"
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize"
      android:background="#C83B3B"
      app:title="Thêm sản phẩm">

  </androidx.appcompat.widget.Toolbar>

  <EditText
      android:id="@+id/edtTen"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Tên sản phẩm"
      android:inputType="text" />

  <EditText
      android:id="@+id/edtGia"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Giá"
      android:inputType="text" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <EditText
        android:id="@+id/edtHinh"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hình ảnh"
        android:inputType="text" />

    <ImageView
        android:id="@+id/imgcamera"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_menu_camera" />
  </LinearLayout>

  <EditText
      android:id="@+id/edtMota"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Mô tả"
      android:inputType="text" />

  <Spinner
      android:id="@+id/spinnerLoai"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <Button
      android:id="@+id/btnThemSp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Thêm sản phẩm" />
</LinearLayout>